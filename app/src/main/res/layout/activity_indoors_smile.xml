<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--android:background="@drawable/exercise_gradient"-->
        <!---->
        <TextView
            android:id="@+id/exercisePageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Laugh and Smile!"
            android:textAlignment="center"
            android:textColor="@color/colorChillBlud"
            android:textSize="32sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/cuteBabyImg"
                android:layout_width="match_parent"
                android:layout_height="152sp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="8sp"
                android:scaleType="centerCrop"
                android:src="@drawable/cute_baby_image" />

            <TextView
                android:id="@+id/cuteBabyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cuteBabyImg"
                android:layout_alignEnd="@id/cuteBabyImg"
                android:layout_alignRight="@id/cuteBabyImg"
                android:layout_marginBottom="8sp"
                android:layout_marginRight="16sp"
                android:fontFamily="sans-serif"
                android:text="Like cute babies?"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/cutePupImg"
                android:layout_width="match_parent"
                android:layout_height="152sp"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="2sp"
                android:scaleType="centerCrop"
                android:src="@drawable/cute_pup_img" />

            <TextView
                android:id="@+id/cutePupTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cutePupImg"
                android:layout_alignEnd="@id/cutePupImg"
                android:layout_alignRight="@id/cutePupImg"
                android:layout_marginBottom="8sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:fontFamily="sans-serif"
                android:text="How about cute pups?"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/memesImg"
                android:layout_width="match_parent"
                android:layout_height="152sp"
                android:layout_marginBottom="8sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="2sp"
                android:scaleType="centerCrop"
                android:src="@drawable/meme_img" />

            <TextView
                android:id="@+id/funnyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/memesImg"
                android:layout_alignEnd="@id/memesImg"
                android:layout_alignRight="@id/memesImg"
                android:layout_marginBottom="8sp"
                android:layout_marginEnd="16sp"
                android:layout_marginRight="16sp"
                android:fontFamily="sans-serif"
                android:text="Something to chuckle at"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>