<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/Icon"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="4sp"
                android:src="@drawable/logo_chillapp" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="Rubik"
                android:text="Outdoors"
                android:textAlignment="center"
                android:textColor="@color/colorChillBlud"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="36sp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/pageDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Let's get some fresh air today!"
            android:textAlignment="center"
            android:textColor="@color/colorChillBlud"
            android:layout_margin="8sp"
            android:textSize="20sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageButton
                android:id="@+id/img_btn_parkImage"
                android:layout_width="match_parent"
                android:layout_height="152sp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="2sp"
                android:layout_marginTop="2sp"
                android:src="@drawable/park_image" />
            <TextView
                android:id="@+id/parkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_btn_parkImage"
                android:layout_alignEnd="@id/img_btn_parkImage"
                android:layout_alignRight="@id/img_btn_parkImage"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="8sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:text="Park, anyone?"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/img_btn_nearby"
                android:layout_width="match_parent"
                android:layout_height="152sp"
                android:src="@drawable/nearby_image"
                android:scaleType="centerCrop"
                android:layout_marginBottom="2sp"
                android:layout_marginTop="2sp"
                />
            <TextView
                android:id="@+id/nearbyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_btn_nearby"
                android:layout_alignEnd="@id/img_btn_nearby"
                android:layout_alignRight="@id/img_btn_nearby"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="16sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:text="Check out what's happening nearby!"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageButton
                android:id="@+id/exerciseImage"
                android:layout_width="match_parent"
                android:layout_height="152sp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="4sp"
                android:layout_marginTop="2sp"
                android:src="@drawable/exercise_image" />
            <TextView
                android:id="@+id/exerciseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/exerciseImage"
                android:layout_alignEnd="@id/exerciseImage"
                android:layout_alignRight="@id/exerciseImage"
                android:layout_marginRight="16sp"
                android:layout_marginBottom="16sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:text="Raise those endorphins!" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>